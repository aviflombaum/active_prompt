<div class="page-header">
  <h1 class="page-header__title">
    Test Run Details
    <span class="page-header__subtitle"><%= @playground_run_result.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
  </h1>
  
  <div class="page-header__actions">
    <%= link_to "Back to Test Runs", prompt_playground_run_results_path(@playground_run_result.prompt_version.prompt), class: "btn btn--secondary" %>
    <%= link_to "View Prompt", prompt_path(@playground_run_result.prompt_version.prompt), class: "btn btn--secondary" %>
  </div>
</div>

<div class="content-grid">
  <div class="card">
    <div class="card__header">
      <h2 class="card__title">Run Information</h2>
    </div>
    <div class="card__content">
      <dl class="details-list">
        <div class="details-list__item">
          <dt>Prompt</dt>
          <dd><%= link_to @playground_run_result.prompt_version.prompt.name, prompt_path(@playground_run_result.prompt_version.prompt) %></dd>
        </div>
        <div class="details-list__item">
          <dt>Version</dt>
          <dd><%= link_to "v#{@playground_run_result.prompt_version.version_number}", prompt_version_path(@playground_run_result.prompt_version.prompt, @playground_run_result.prompt_version) %></dd>
        </div>
        <div class="details-list__item">
          <dt>Provider</dt>
          <dd><span class="badge"><%= @playground_run_result.provider %></span></dd>
        </div>
        <div class="details-list__item">
          <dt>Model</dt>
          <dd><%= @playground_run_result.model %></dd>
        </div>
        <div class="details-list__item">
          <dt>Execution Time</dt>
          <dd><%= @playground_run_result.execution_time %>s</dd>
        </div>
        <div class="details-list__item">
          <dt>Token Count</dt>
          <dd><%= @playground_run_result.token_count || "Not available" %></dd>
        </div>
        <% if @playground_run_result.temperature.present? %>
          <div class="details-list__item">
            <dt>Temperature</dt>
            <dd><%= @playground_run_result.temperature %></dd>
          </div>
        <% end %>
        <% if @playground_run_result.max_tokens.present? %>
          <div class="details-list__item">
            <dt>Max Tokens</dt>
            <dd><%= @playground_run_result.max_tokens %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <% if @playground_run_result.parameters.present? && @playground_run_result.parameters.any? %>
    <div class="card">
      <div class="card__header">
        <h2 class="card__title">Parameters Used</h2>
      </div>
      <div class="card__content">
        <dl class="details-list">
          <% @playground_run_result.parameters.each do |key, value| %>
            <div class="details-list__item">
              <dt><%= key %></dt>
              <dd><%= value %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  <% end %>
</div>

<% if @playground_run_result.system_message.present? %>
  <div class="card">
    <div class="card__header">
      <h2 class="card__title">System Message</h2>
    </div>
    <div class="card__content">
      <div class="code-block">
        <pre><code><%= @playground_run_result.system_message %></code></pre>
      </div>
    </div>
  </div>
<% end %>

<div class="card">
  <div class="card__header">
    <h2 class="card__title">Rendered Prompt</h2>
  </div>
  <div class="card__content">
    <div class="code-block">
      <pre><code><%= @playground_run_result.rendered_prompt %></code></pre>
    </div>
  </div>
</div>

<div class="card">
  <div class="card__header">
    <h2 class="card__title">AI Response</h2>
  </div>
  <div class="card__content">
    <div class="code-block">
      <pre><code><%= @playground_run_result.response %></code></pre>
    </div>
  </div>
</div>